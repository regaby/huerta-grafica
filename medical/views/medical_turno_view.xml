<openerp>
	<data>
		<record model="ir.ui.view" id="medical_turno_view_tree">
			<field name="name">medical.turno.tree</field>
			<field name="model">medical.turno</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string='Turnos'>
					<field name="patient"/>
					<field name="doctor_id"/>
					<field name="f_fecha_practica"/>
					<field name="state"/>
					
				</tree>
			</field>
		</record>

		<record model="ir.ui.view" id="medical_turno_view_form">
			<field name="name">medical.turno.form</field>
			<field name="model">medical.turno</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Turnos" version="8.0">
					<header>
						<button string="Marcar Presente" type="object"
                                        name="action_present" states="draft" icon="terp-check" />
                        <button string="Marcar Ausente" type="object"
                                        name="action_absent" states="draft" icon="STOCK_CANCEL"/>
						<field name="state" widget="statusbar" options='{"clickable":"1"}'/>
					</header>
					<sheet>
						<group name="field" col="4">
							<field name="patient" />
							<field name="practice_id" required="True" domain="[('frequently_used','=',True)]" widget="selection"/>
							<field name="appointment_id" domain="[('patient','=',patient)]"/>
							<field name="doctor_id" widget="selection" required="True"/>
							<field name="f_fecha_practica" />
							
						</group>
						<group >
							<field name="comments" />
						</group>

					</sheet>
				</form>
			</field>
		</record>

		<record id="view_medical_turno" model="ir.ui.view">
			<field name="name">medical.turno.calendar</field>
			<field name="model">medical.turno</field>
			<field name="type">calendar</field>
			<field name="arch" type="xml">
				<calendar string="Turnos" color="doctor_id" date_start="f_fecha_practica">
					
					<field name="patient" />
					<field name="doctor_id" />
				</calendar>
			</field>
		</record>

		<record model="ir.actions.act_window" id="action_medical_turno_view">
			<field name="name">Turnos</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">medical.turno</field>
			<field name="view_type">form</field>
			<field name="view_mode">calendar,tree,form</field>
		</record>

		<record id="view_medical_turno_view_filter" model="ir.ui.view">
			<field name="name">medical.turno.view.select</field>
			<field name="model">medical.turno</field>
			<field name="type">search</field>
			<field name="arch" type="xml">
				<search string="Search Turnos">
					<newline />
					<separator orientation="vertical" />
					<field name="patient" />
					<field name="doctor_id" />
					<field name="f_fecha_practica" />
					<field name="state" />
					
				</search>
			</field>
		</record>

	</data>
</openerp>